<style lang="less">
  page {
    background: #f7f7f7;
  }
  .line{
    border-bottom: 1rpx solid rgba(180,180,180,0.2);
  }

  .header {
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    padding: 40rpx 40rpx 40rpx 40rpx;
    z-index: 99;
    >.project {
      color: #000000;
      font-weight: 500;
      font-size: 18px;
    }
    > .filter {
      display: flex;
      align-items: center;
      >image{
        width:14px;
        height:15px;
        margin-right: 2px;
      }
      >text{
        color: #666666;
        font-size: 14px;
      }
    }
  }
  .con{
    padding-bottom: 20rpx;
    .con-item{
      margin-top: 20rpx;
      display: flex;
      justify-content: flex-start;
      position: relative;
      background-color: #ffffff;
      padding-top: 15px;
      padding-bottom: 5px;
      .con-avar{
        flex: 1;
        text-align: center;
        image{
          width: 35px;
          height: 35px;
        }
      }
      .con-content{
        flex: 4;
        display: flex;
        flex-direction: column;
        .name{
          color: #666666;
          font-size: 14px;
          padding-bottom: 13rpx;
        }
        .to-method{
          color: #999999;
          font-size: 12px;
          padding-bottom: 8rpx;
        }
        .remark{
          color: #ED6B42;
          font-size: 14px;
          height:30px ;
          display: flex;
          margin-top: 19rpx;
          .rtxt{
            flex: 4;
            display:flex;
            align-items:center;
          }
          .rbtn{
            flex: 1.2;
            display: flex;
            flex-direction: column;
            justify-content: center;
           view{
             background-color: rgba(233,72,22,0.1);
             color: #E94816;
             border: 1rpx solid rgba(233,72,22,0.5);
             height: 25px;
             width: 44px;
             text-align: center;
             line-height: 25px;
             font-size: 13px;
             -webkit-border-radius: 4px;
             -moz-border-radius: 4px;
             border-radius: 4px;
           }
          }
        }
      }
      .label{
        position: absolute;
        right: 0;
        top: 0;
      }
    }
    .bottomline{
      background-color: #f7f7f7;
      color: #666666;
      width: 100%;
      height: 40rpx;
      text-align: center;
      line-height: 40rpx;
      font-size: 14px;
      padding-top:10rpx;
      padding-bottom:10rpx;
    }
  }
  .prohibit{
    color: #666666 !important;
    border: 1rpx solid #999999 !important;
    background-color: #f7f7f7 !important;
  }
  .modal{
    background-color: #f7f7f7 !important;
    z-index:9999;
    position:relative;
  }
  .noData{
    text-align: center;
    margin-top: 100px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    image{
      width: 60px;
      height: 60px;
    }
  }
  .downImg{
     width:20rpx;
     height:16rpx;
  }
</style>

<template>
  <view class="main">
    <view class="header {{showMask?'modal':''}}">

<!--参团确认-->
          <picker wx:if='{{type}}' mode="selector" bindchange="bindAgentPickerChange"  range-key="{{'name'}}"  value="{{pickerActive[hx_index].id}}" range="{{pickerActive}}" data-id="{{pickerActive[hx_index].id}}" >
               <view class="project">{{pickerActive[hx_index].name}} <image src='../assets/images/downImg.png' class="downImg"/> </view>
          </picker>
<!--报名回访-->
        <view wx:if='{{!type}}'  class="project">
            <block wx:for='{{pickerActive}}' wx:key='key'>
               <text wx:if='{{item.id==option.base_id}}'> {{item.name}}</text>
            </block>
        </view>


      <view class="filter" @tap="showFilter">
        <image src="../assets/images/icon_sx@2x.png"></image>
        <text>筛选</text>
      </view>
    </view>

    <scroll-view
          scroll-y
          style="{{'height:'+height+'px'}}"
          bindscrolltolower="onReachBottom"
          class="con">
        <block wx:for="{{listData}}" wx:key  index="index">
          <view class="con-item">
              <view class="con-avar" data-tell='{{item.mobile}}' catchtap="call_mobile">
                <image src="{{item.icon}}"></image>
              </view>
              <view class="con-content">
                <text class="name" data-tell='{{item.mobile}}' catchtap="call_mobile">{{item.user_name}} {{item.mobile}}</text>
                <text class="to-method">前往方式: {{item.ridingName}}</text>
                <text class="to-method line">报名项目: {{item.project_name}}</text>
                <view class="remark">
                  <view class="rtxt">
                    <text wx:if="{{item.return_visit}}">备注:{{item.return_visit == 1?'【去】': item.return_visit == 2?'【不去】':''}} {{item.remark}}</text>
                  </view>
                  <view class="rbtn">
                    <view hidden="{{!item.remark}}" class="prohibit"  data-index="{{index}}" @tap="remarkData">已备注</view>
                    <view hidden="{{item.remark || remarkOver===index}}" data-index="{{index}}" @tap="remarkData">备注</view>
                  </view>
                </view>
              </view>
              <view class="label"></view>
          </view>
        </block>
        <view wx:if="{{isOver && listData.length>0}}" class="bottomline">—没有更多了—</view>
        <view class="noData" wx:if="{{listData.length === 0}}">
          <image src="../assets/images/no-data.png"></image>
          <text>没有数据了</text>
        </view>
    </scroll-view>

    <!-- <view wepy:else class="list">
      <view class="iconImage">
        暂无签到
      </view>
    </view> -->
    <remark wx:if="{{showBg}}"
            :dataList.sync="listData"
            :dataItem.sync="checkIndex"
            @modifyState.user="modifyState"
            @changeState.user="changeState"></remark>
    <menu wx:if="{{showMask}}"
          :isFilter.sync="showMask"
          @hideModel.user = 'hideModel'
          @changeData.user="changeData"></menu>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import toastMixin from '../mixins/toast'
  import api from '../mixins/api'
  import util from '../mixins/util'
  import remark from '../components/remark'
  import menu from '../components/menu'

  export default class SubList extends wepy.page {
    config = {
      navigationBarTitleText: '未签到回访',
      navigationBarBackgroundColor: '#FF5D22',
      navigationBarTextStyle: 'white'
    }

    mixins = [api, toastMixin, util]

    components = {
      remark: remark,
      menu: menu
    }

    data = {
      listData: [],
      page: 1,
      isOver: false,
      showBg: false,
      option: '',
      height: 0,
      showMask: false,
      checkIndex: '',
      remarkOver: '',
      address: [],
      isFilter: false,
      preview: '',
      pickerActive:[],//采集活动期数
      hx_index:0,
      type:''
    }

    onLoad(options) {
      console.log('op', options)
      let type = options.type
      this.option = options
      this.type = options.type
      this.$apply()
    //渲染采集活动期数
           let token = wepy.getStorageSync('token')
           let tokenid = wepy.getStorageSync('tokenid')

           var baseinfoData={
            token:token,
            tokenid:tokenid
           }


          this.getBaseinfo(baseinfoData).then(res=>{
              this.pickerActive = res.data.data;
              this.$apply();
               let h = wx.getSystemInfoSync().windowHeight
               let data = {}
               console.log(type,"hahah")
              if (type==0) {
                let user = wepy.getStorageSync('user')
                data = {
                  group_id: user.id,
                  base_id: this.pickerActive[0].id,
                  page: 1,
                  pagesize: 10
                }
                wx.setNavigationBarTitle({
                  title: '参团确认'
                })
              } else {
                data = {
                  base_id:options.base_id,
                  page: 1,
                  return_visit: 1,
                  pagesize: 10
                }
                wx.setNavigationBarTitle({
                  title: '参团提醒'
                })
              }
              this.getEnrollData(data).then(res => {
                this.listData = res.data.data
                this.address = res.data.dataReserve2
                this.height = h - 55
                this.$broadcast('getData', res.data.dataReserve2,options)
                this.$apply()
              })

          })




    }

    onShow() {
      let op = this.option
      this.option = op
      this.showMask = false
      this.$apply()

    }

    methods = {
//拨打电话
call_mobile:function(e){
console.log(e,"hah ")
   wx.makePhoneCall({
     phoneNumber: e.currentTarget.dataset.tell
   })
},
//选择采集活动期数
      bindAgentPickerChange:function(e){
          this.hx_index= e.detail.value;

          this.$apply()
          let id = this.pickerActive[this.hx_index].id;

          let h = wx.getSystemInfoSync().windowHeight
                let data = {}
                if (this.type) {
                  let user = wepy.getStorageSync('user')
                  data = {
                    group_id: user.id,
                    base_id:id,
                    page: 1,
                    pagesize: 10
                  }
                } else {
                  data = {
                    base_id: id,
                    page: 1,
                    return_visit: 1,
                    pagesize: 10
                  }
                }
          var options  = this.option;options.base_id = id
          this.getEnrollData(data).then(res => {
            console.log('res', res)
            this.listData = res.data.data
            this.address = res.data.dataReserve2
            this.height = h - 55
            this.$broadcast('getData', res.data.dataReserve2,options)
            this.$apply()
          })
      },

      changeState() {
        this.showBg = false
        this.$apply()
      },


    hideModel(e){
       this.showMask = e
    },

      modifyState(e,ev) {
        let listData = this.listData
        listData[this.checkIndex].remark = e  // 备注内容

        listData[this.checkIndex].return_visit = ev  //1:去；2不去

        this.showBg = false
        this.remarkOver = this.checkIndex
        this.listData = listData
        console.log('list', listData)
        this.$apply()
      },

      changeData(data) {
        this.listData = data
        this.showMask = false
        this.$apply()
      }
    }

    showFilter() {
      let mask = this.data.showMask
      this.showMask = !mask
      this.$apply()
    }



    remarkData(e) {
      let index = e.currentTarget.dataset.index
      console.log('index', index)
      this.checkIndex = index
      this.$apply()
      setTimeout(() => {
        this.showBg = true
        this.$apply()
      }, 100)
    }

    test(obj, target) {
      let o = true
      let t = true
      if (obj.addr) o = (obj.addr === target.addr)
      if (obj.return_visit) t = (obj.return_visit === target.return_visit)
      return o === t
    }

    // 上拉加载更多
    onReachBottom() {
      let filter = this.listData[0].isFilter
      let options = this.option
      let type = options.type
      let page = this.page + 1
      let data = {}
      if (type) {
        let user = wepy.getStorageSync('user')
        data = {
          base_id: options.base_id,
          group_id: user.id,
          page: page,
          pagesize: 10
        }
      } else {
        data = {
          base_id: options.base_id,
          page: page,
          return_visit: 1,
          pagesize: 10
        }
      }
      if (filter) {
        let temp = this.listData[0].filter
        let pre = this.preview
        if (pre) {
          let state = this.test(pre, temp)
          if (state) {
            pre.page += 1
            this.preview = pre
            data = pre
          } else {
            temp.page += 1
            this.preview = temp
            data = temp
          }
        } else {
          temp.page += 1
          this.preview = temp
          data = temp
        }
        this.$apply()
      }
      if (!this.isOver) {
        this.getEnrollData(data).then(res => {
          let list = this.listData
          let listData = res.data.data
          if (listData.length === 0) {
            this.isOver = true
          }
          list = list.concat(listData)
          this.listData = list
          this.page = page
          this.$apply()
        })
      } else {
        this.selfToast('暂无更多数据', 'none')
      }
    }
  }
</script>
