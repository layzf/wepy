.remarkcon {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(1, 1, 1, 0.5);
}
.remarkcon .con {
  background-color: #ffffff;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding-bottom: 32px;
}
.remarkcon .con .con-line {
  display: flex;
  justify-content: flex-start;
}
.remarkcon .con .con-line .btn {
  width: 64px;
  height: 27px;
  text-align: center;
  line-height: 27px;
  background-color: #ACACAC;
  color: #ffffff;
  font-size: 14px;
  margin-left: 15px;
  border-radius: 4px;
  margin-top: 21px;
  margin-bottom: 20px;
}
.remarkcon .con .con-content {
  height: 117px;
  padding-left: 15px;
  padding-right: 15px;
}
.remarkcon .con .fbtn {
  margin-left: 15px;
  margin-right: 15px;
  background-color: #FF5D22;
  color: #ffffff;
  font-size: 14px;
  text-align: center;
  padding: 13px 0;
  -webkit-border-radius: 4px;
  -moz-border-radius: 4px;
  border-radius: 4px;
}
.show {
  animation: all .3s linear;
}
.right {
  color: #EB5F33 !important;
  background-color: #FCECE7 !important;
  border: 1rpx solid #F39C81;
}
