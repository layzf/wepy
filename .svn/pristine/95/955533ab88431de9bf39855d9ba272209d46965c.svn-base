.main {
  padding: 100rpx 40rpx 0rpx;
}
.main > .imgView {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 180rpx;
  text-align: center;
}
.main > .imgView > .logoImg {
  width: 210rpx;
  height: 86rpx;
}
.main > .imgView > .operateImg {
  width: 72rpx;
  height: 34rpx;
  margin-left: 10rpx;
}
.main > .flex-row {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.main .input-group {
  border-bottom: 1px solid #EBEBEB;
  padding-top: 72rpx;
  padding-bottom: 12rpx;
}
.main .input-group .login-icon {
  width: 40rpx;
  height: 50rpx;
  margin-right: 36rpx;
}
.main input {
  font-size: 32rpx;
}
.main .login-btn {
  margin-top: 60rpx;
  margin-bottom: 44rpx;
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(to right, #e94816 50%, #f89322 100%);
  border-radius: 8px;
  border: none;
}
