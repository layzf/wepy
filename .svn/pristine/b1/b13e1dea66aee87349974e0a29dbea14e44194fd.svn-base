page {
  background-color: #f7f7f7;
}
.list {
  line-height: 100rpx;
  color: #999;
  font-size: 14px;
  padding: 0 28rpx;
  background-color: #fff;
}
.list > .group {
  display: flex;
  flex-direction: row;
  flex: 4;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}
.list > .group > .address {
  color: #666;
  flex: 5;
  margin-right: 10rpx;
  text-align: right;
}
.list > .group > .gray {
  color: #999;
}
.title {
  background-color: #fff;
  margin-top: 20rpx;
  font-size: 14px;
  color: #333;
  line-height: 88rpx;
  padding-left: 28rpx;
  border-bottom: 1px solid #eee;
}
.main {
  padding: 30rpx 0;
  background-color: #fff;
  display: flex;
}
.main > image {
  width: 240rpx;
  height: 180rpx;
}
.just {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.just > .name {
  color: #333;
  font-size: 14px;
  margin-left: 40rpx;
}
.just > .price {
  color: #e94816;
  font-size: 14px;
  font-weight: 500;
}
.bottom {
  position: fixed;
  background-color: #fff;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  font-size: 14px;
}
.bottom > .money {
  flex: 5;
  color: #333;
  text-align: right;
}
.bottom > .total {
  flex: 2;
  color: #e94816;
}
.bottom > .div {
  flex: 3;
  background-color: #e94816;
  color: #fff;
  font-size: 15px;
  text-align: center;
}
.main_text {
  background-color: #ffffff;
  margin-top: 20rpx;
}
.main_text .main_item {
  display: flex;
  align-items: center;
  height: 108rpx;
  width: 90%;
  margin: 0 auto;
  justify-content: space-between;
}
.main_text .main_item .m_i_txt {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.main_text .main_item .m_i_txt .m_i_name {
  color: #333333;
  font-size: 28rpx;
}
.main_text .main_item .m_i_txt .m_i_date {
  font-size: 24rpx;
  color: #999999;
}
.main_text .main_item .price {
  color: #333333;
  font-size: 28rpx;
}
.main_text .totalprice {
  width: 90%;
  margin: 0 auto;
  height: 108rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: #E94816;
  font-size: 28rpx;
  border-top: 1rpx solid rgba(180, 180, 180, 0.2);
}
