page {
  background-color: #F7F7F7;
}
.title {
  background-color: #fff;
  padding-top: 60rpx;
  padding-bottom: 100rpx;
  text-align: center;
}
.title > .hint {
  color: #666;
  font-size: 16px;
  margin-bottom: 30rpx;
}
.title > .money {
  color: #333;
  font-size: 14px;
}
.title > .money > .price {
  color: #e94816;
}
.box {
  width: 324rpx;
  height: 324rpx;
  background-color: #fff;
  margin: 0 auto;
  border: 1px solid #e9e9e9;
  margin-top: 54rpx;
  margin-bottom: 20rpx;
}
.box > .codeImg {
  width: 270rpx;
  height: 270rpx;
  margin: 0 auto;
  margin-top: 26rpx;
}
.tip {
  font-size: 12px;
  color: #666;
}
.buttonGroup {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 70rpx;
}
.buttonGroup > view {
  width: 240rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  font-size: 14px;
}
.buttonGroup > .left {
  border: 1px solid #ff5d22;
  color: #ff5d22;
}
.buttonGroup > .right {
  color: #fff;
  background-color: #ff5d22;
}
