page {
  background-color: #f7f7f7;
}
.head {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.search {
  padding: 44rpx 28rpx;
  background-color: #fff;
  display: flex;
}
.search > .flex-row {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  border-radius: 46rpx;
  border: 1px solid #e9e9e9;
  padding: 20rpx 20rpx 10rpx 20rpx;
  width: 100%;
  font-size: 28rpx;
  background-color: #F6F6F6;
  color: #666666;
}
.search .scan-btn {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 20%;
  font-size: 20rpx;
  color: #333333;
}
.search .scan-btn .scan-img {
  width: 50rpx;
  height: 44rpx;
  padding-bottom: 8rpx;
}
.search .login-icon {
  width: 36rpx;
  height: 42rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.placeholder {
  font-size: 14px;
  color: #666;
}
.title {
  line-height: 108rpx;
  font-size: 14px;
  color: #666;
  padding-left: 28rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}
.con-item {
  display: flex;
  justify-content: space-between;
  padding: 16px 10px;
  background-color: #ffffff;
  border-bottom: 1rpx solid rgba(180, 180, 180, 0.2);
}
.con-item .con-left {
  flex: 1;
  display: flex;
  justify-content: center;
}
.con-item .con-left image {
  width: 35px;
  height: 35px;
}
.con-item .con-left text {
  padding-left: 16px;
  color: #666666;
  font-size: 14px;
}
.con-item .con-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
}
.con-item .con-right .label {
  color: #E94816;
  font-size: 13px;
}
.con-item .con-right .time {
  color: #999999;
  font-size: 12px;
}
